{
  "metadata": {
    "title": "ipn.io",
    "description": "IPN Website."
  },
  "plugins": {
    "metalsmith-markdown": {
      "smartypants": true,
      "gfm": true,
      "tables": true,
      "breaks": true
    },
    "metalsmith-layouts": {
      "engine": "handlebars"
    },
    "metalsmith-static": {
      "src": "styles/",
      "dest": "styles"
    },
    "metalsmith-serve": {
      "port": 8081,
      "verbose": true
    },
    "metalsmith-watch": {
      "pattern" : "**/*"
    }
  }
}
